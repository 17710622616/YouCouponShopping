<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg">
    <ImageView
        android:id="@+id/taobao_auth_cancel"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/mine_to_evaluate"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/taobao"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请完成淘宝登录"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="淘宝授权后下单或分析产品可以获得收益哦"
        android:textSize="16sp"
        android:textColor="@color/colorDrakGray"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/go_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="去授权"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_coupon_side"/>
</LinearLayout>