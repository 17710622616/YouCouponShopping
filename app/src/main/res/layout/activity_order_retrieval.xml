<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youcoupon.john_li.youcouponshopping.YouView.YouHeadView
        android:id="@+id/order_retrieval_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/order_retrieval_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="16sp"
        android:hint="请输入或粘贴需找回的订单号码"/>

    <TextView
        android:id="@+id/order_retrieval_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_title_check"
        android:text="找回订单"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/order_retrieval_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/order_retrieval_tips"/>
</LinearLayout>