<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAlpha">

    <ImageView
        android:layout_width="336dp"
        android:layout_height="426dp"
        android:src="@mipmap/share1"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:background="@color/colorAlpha"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorAlpha">

        <LinearLayout
            android:id="@+id/dialog_app_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorAlpha">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/wechat"
                android:scaleType="fitXY"
                android:background="@color/colorAlpha"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信分享"
                android:textSize="14sp"
                android:background="@color/colorAlpha"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_app_whatsapp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorAlpha">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/whatsapp"
                android:scaleType="fitXY"
                android:background="@color/colorAlpha"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp分享"
                android:textSize="14sp"
                android:background="@color/colorAlpha"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_app_fb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorAlpha">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/facebook"
                android:scaleType="fitXY"
                android:background="@color/colorAlpha"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FaceBook分享"
                android:textSize="14sp"
                android:background="@color/colorAlpha"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_app_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@mipmap/cancel"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/colorAlpha"/>
</LinearLayout>