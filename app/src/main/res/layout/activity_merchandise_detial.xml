<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/merchandise_detial_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/merchandise_detial_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/merchandise_detial_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:clipToPadding="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.v4.view.ViewPager
                android:id="@+id/merchandise_detial_vp"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/merchandise_detial_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="25dp"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />    <!--折叠模式-->

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/collapsing_comment_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorMineGray">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/merchandise_detial_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/merchandise_detial_coupon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="券"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/merchandise_detial_title"
                    android:background="@drawable/shape_coupon_icon"/>

                <TextView
                    android:id="@+id/merchandise_detial_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/merchandise_detial_title"
                    android:layout_toRightOf="@id/merchandise_detial_coupon_tv"
                    android:background="@drawable/shape_coupon_side"/>

                <TextView
                    android:id="@+id/merchandise_detial_coupon_remain_coun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩餘數量："
                    android:textSize="14sp"
                    android:textColor="@color/colorDrakGray"
                    android:layout_alignBaseline="@id/merchandise_detial_coupon_tv"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/merchandise_detial_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="券后：¥"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/merchandise_detial_coupon_tv"/>

                <TextView
                    android:id="@+id/merchandise_detial_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="原價：¥"
                    android:textSize="12sp"
                    android:textColor="@color/colorLineGray"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/merchandise_detial_coupon_tv"
                    android:layout_toRightOf="@id/merchandise_detial_after"
                    android:layout_alignBaseline="@id/merchandise_detial_after"/>

                <TextView
                    android:id="@+id/merchandise_detial_in_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月銷量："
                    android:textSize="14sp"
                    android:textColor="@color/colorDrakGray"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/merchandise_detial_coupon_tv"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/merchandise_detial_merchants_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天貓：包郵"
                    android:textSize="12sp"
                    android:textColor="@color/colorDrakGray"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/merchandise_detial_after"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/merchandise_detial_shop_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/taobao"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dp"/>

                <TextView
                    android:id="@+id/merchandise_detial_seller_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorDrakGray"
                    android:layout_toRightOf="@id/merchandise_detial_shop_icon"/>

                <TextView
                    android:id="@+id/merchandise_detial_seller_shop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorDrakGray"
                    android:layout_below="@id/merchandise_detial_seller_nick"
                    android:layout_toRightOf="@id/merchandise_detial_shop_icon"/>

                <TextView
                    android:id="@+id/merchandise_detial_seller_shop_provcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorDrakGray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <com.youcoupon.john_li.youcouponshopping.YouView.NoScrollGridView
                android:id="@+id/merchandise_detial_lv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:divider="#F1F1F1"
                android:groupIndicator="@null"
                android:paddingTop="10dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <LinearLayout
            android:id="@+id/merchandise_detial_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/colorWhite">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/store"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店鋪"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/merchandise_detial_shopping_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/colorWhite">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/shopping_cart_detial"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="購物車"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/merchandise_detial_coupon_redemption"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="領券購買"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>