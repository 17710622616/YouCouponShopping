<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youcoupon.john_li.youcouponshopping.YouView.YouHeadView
        android:id="@+id/bussines_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/bussines_et"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:hint="请输入您的合作意向"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:gravity="top"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:background="@color/colorWhite"/>

            <EditText
                android:id="@+id/bussines_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="称呼"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:background="@color/colorWhite"/>

            <EditText
                android:id="@+id/bussines_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="联络方式"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:background="@color/colorWhite"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bussines_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_marginTop="10dp"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交中"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>