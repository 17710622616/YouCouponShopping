<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youcoupon.john_li.youcouponshopping.YouView.YouHeadView
        android:id="@+id/user_info_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/userinfo_headimg_ll"
            style="@style/mineLinearLayout"
            android:layout_marginTop="1dp">
            <TextView
                style="@style/MineItemTextView"
                android:text="头像"/>

            <com.youcoupon.john_li.youcouponshopping.YouView.YouCycleImageView
                android:id="@+id/userinfo_headimg_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@mipmap/mine_check"/>
            <ImageView
                style="@style/MineItemImageNext"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_name_ll"
            style="@style/mineLinearLayout"
            android:layout_marginTop="1dp">
            <TextView
                style="@style/MineItemTextView"
                android:text="昵称"/>

            <TextView
                android:id="@+id/userinfo_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="12sp"
                android:textColor="@color/colorDrakGray"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"/>
            <ImageView
                style="@style/MineItemImageNext"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_sex_ll"
            style="@style/mineLinearLayout"
            android:layout_marginTop="1dp">
            <TextView
                style="@style/MineItemTextView"
                android:text="性别"/>

            <TextView
                android:id="@+id/userinfo_sex_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="12sp"
                android:textColor="@color/colorDrakGray"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"/>
            <ImageView
                style="@style/MineItemImageNext"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_birthday_ll"
            style="@style/mineLinearLayout"
            android:layout_marginTop="1dp">
            <TextView
                style="@style/MineItemTextView"
                android:text="生日"/>

            <TextView
                android:id="@+id/userinfo_birthday_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00"
                android:textSize="12sp"
                android:textColor="@color/colorDrakGray"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"/>
            <ImageView
                style="@style/MineItemImageNext"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_flag_ll"
            style="@style/mineLinearLayout"
            android:layout_marginTop="1dp">
            <TextView
                style="@style/MineItemTextView"
                android:text="标签"/>

            <TextView
                android:id="@+id/userinfo_flag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorDrakGray"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"/>
            <ImageView
                style="@style/MineItemImageNext"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userinfo_des_ll"
            style="@style/mineLinearLayout"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/userinfo_des_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorDrakGray"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:lines="3"
                android:gravity="top"
                android:background="@null"
                android:hint="请输入个性签名"/>
        </LinearLayout>

        <TextView
            android:id="@+id/userinfo_save_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:text="保存"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_margin="15dp"
            android:gravity="center"
            android:enabled="false" />
    </LinearLayout>
</LinearLayout>