<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_wr_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:text="des"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/item_wr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/item_wr_remark"
        android:text="2018-03-15 22:27:36"
        android:textSize="12sp"
        android:textColor="@color/colorDrakGray"/>

    <TextView
        android:id="@+id/item_wr_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/item_wr_time"
        android:text="流水编号"
        android:textSize="12sp"
        android:textColor="@color/colorDrakGray"/>

    <TextView
        android:id="@+id/item_wr_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="60"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/item_wr_MOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="RMB"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@id/item_wr_num"/>

    <TextView
        android:id="@+id/item_wr_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="3dp"
        android:text="-"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@id/item_wr_MOP"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>